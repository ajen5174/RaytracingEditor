<UserControl x:Class="WPFSceneEditor.Controls.HierarchyEntity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFSceneEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">

	<Grid x:Name="ContainerGrid">
		<Button Name="EntityName" Click="EntityName_Click" 
				HorizontalContentAlignment="Left" Padding="5"
				></Button>
		<Grid.ContextMenu>
			<ContextMenu>
				<MenuItem Header="_Delete" Click="Delete_Click"></MenuItem>
				<MenuItem Header="_Rename" Click="Rename_Click"></MenuItem>
			</ContextMenu>
		</Grid.ContextMenu>
		
    </Grid>
</UserControl>
