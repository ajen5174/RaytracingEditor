			<Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">Field of View</Label>
			<TextBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Name="FovBox" KeyUp="FovBox_KeyUp">0</TextBox>

