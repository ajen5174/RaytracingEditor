<Window x:Class="WPFSceneEditor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSceneEditor"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="200" Width="500">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">Background Color: </Label>

		<TextBox Name="BackgroundColorRed" Grid.Column="1" VerticalAlignment="Center" Height="40px">0.5</TextBox>
		<TextBox Name="BackgroundColorGreen" Grid.Column="2" VerticalAlignment="Center" Height="40px">0.7</TextBox>
		<TextBox Name="BackgroundColorBlue" Grid.Column="3" VerticalAlignment="Center" Height="40px">1.0</TextBox>

		<Button Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Click="Confirm_Click">Confirm</Button>
	</Grid>
</Window>
